{
  "compilerOptions": {
    "target": "ES2016",
    "module": "ES6",
    "lib": ["ES2016", "DOM"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}